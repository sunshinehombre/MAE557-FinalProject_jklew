# Directories
HOMEDIR = $(shell pwd)
SRCDIR = $(HOMEDIR)/src
OBJDIR = $(HOMEDIR)/obj
MODDIR = $(HOMEDIR)/mod
BINDIR = $(HOMEDIR)/bin

# All filenames
SRC = consts aux_subroutines gEqnSolver

# Object *.o files
OBJ = $(addsuffix .o, $(SRC))

# Binary executable
BIN = gEqnSolver

# Compiler
F90 = ifort

# Compiler flags
F90FLAGS = -O3 -openmp
MODFLAGS = -module $(MODDIR)

